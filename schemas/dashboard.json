{
  "$id": "/schemas/dashboard.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "widget": { 
            "type": "object",
            "additionalProperties": true,
            "required": ["definition", "title"],
            "properties": {
              "definition": { "$ref": "/schemas/widget.json" },
              "title": { "type": "string" },
              "tags": { "type": "array", "items": { "type": "string" } },
              "id": { "type": "string" },
              "version": { "type": "number" }
            }
          },
          "text": { 
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "message": { "type": "string" }
            },
            "required": ["title", "message"]
           },
          "layout": {
            "type": "object",
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "w": { "type": "integer" },
              "h": { "type": "integer" }
            },
            "required": ["x", "y", "w", "h"]
          }
        },
        "required": ["layout"],
        "anyOf": [
          { "required": ["widget"] },
          { "required": ["text"] }
        ]
      },
      "minItems": 1
    }
  },
  "required": ["title", "elements"]
}
