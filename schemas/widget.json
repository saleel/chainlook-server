{
  "$id": "/schemas/widget.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["table", "chart", "pieChart", "metric", "text"]
    },
    "data": { "$ref": "#/$defs/data" },
    "table": { "$ref": "#/$defs/table" },
    "chart": { "$ref": "#/$defs/chart" },
    "pieChart": { "$ref": "#/$defs/pieChart" },
    "metric": { "$ref": "#/$defs/metric" },
    "text": { "$ref": "#/$defs/text" }
  },
  "required": ["type"],
  "not": { "required": ["table", "chart", "pieChart", "metric", "text"] },
  "allOf": [
    {
      "if": { "properties": { "type": { "const": "table" } } },
      "then": { "required": ["table"] }
    },
    {
      "if": { "properties": { "type": { "const": "chart" } } },
      "then": { "required": ["chart"] }
    },
    {
      "if": { "properties": { "type": { "const": "metric" } } },
      "then": { "required": ["metric"] }
    },
    {
      "if": { "properties": { "type": { "const": "text" } } },
      "then": { "required": ["text"] }
    },
    {
      "if": { "properties": { "type": { "const": "pieChart" } } },
      "then": { "required": ["pieChart"] }
    }
  ],
  "additionalProperties": false,
  "$defs": {
    "data": {
      "type": "object",
      "properties": {
        "source": { "$ref": "#/$defs/dataSource" },
        "sources": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": { "$ref": "#/$defs/dataSource" }
          },
          "minProperties": 1
        },
        "join": {
          "type": "object",
          "propertyNames": { "$ref": "#/$defs/field" },
          "patternProperties": {
            "": { "$ref": "#/$defs/field" }
          }
        },
        "transforms": {
          "type": "object",
          "propertyNames": { "$ref": "#/$defs/field" },
          "patternProperties": {
            "": { "$ref": "#/$defs/transformer" }
          }
        },
        "group": {
          "type": "object",
          "properties": {
            "key": { "$ref": "#/$defs/field" },
            "aggregations": {
              "type": "object",
              "propertyNames": { "$ref": "#/$defs/field" },
              "patternProperties": {
                "": { "$ref": "#/$defs/aggregation" }
              }
            }
          },
          "required": ["key"],
          "additionalProperties": false
        },
        "dynamicFields": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "type": "object",
              "properties": {
                "operation": { "$ref": "#/$defs/dynamicFieldOperation" },
                "fields": { "type": "array", "items": { "$ref": "#/$defs/field" } }
              }
            }
          }
        }
      },
      "anyOf": [{ "required": ["source"] }, { "required": ["sources"] }],
      "additionalProperties": false
    },
    "dataSource": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["graph", "thegraph", "ipfs", "tableland"],
          "default": "graph"
        },
        "subgraphId": { "type": "string" },
        "entity": { "type": "string" },
        "orderDirection": { "type": "string", "enum": ["asc", "desc"] },
        "orderBy": { "type": "string" },
        "skip": { "type": "integer" },
        "first": { "type": "integer" },
        "filters": { "type": "object", "additionalProperties": true },
        "cid": { "type": "string" },
        "network": { "type": "string" },
        "tableName": { "type": "string" }
      },
      "required": ["provider"],
      "not": {
        "required": ["subgraphId", "entity", "cid", "network", "tableName"]
      },
      "allOf": [
        {
          "if": {
            "properties": { "provider": { "const": "graph" } }
          },
          "then": { "required": ["subgraphId", "entity"] }
        },
        {
          "if": { "properties": { "provider": { "const": "ipfs" } } },
          "then": { "required": ["cid"] }
        },
        {
          "if": {
            "properties": { "provider": { "const": "tableland" } }
          },
          "then": { "required": ["network", "tableName"] }
        }
      ]
    },
    "table": {
      "type": "object",
      "properties": {
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dataKey": { "$ref": "#/$defs/field" },
              "label": { "type": "string" },
              "format": { "$ref": "#/$defs/formatter" }
            },
            "required": ["dataKey"]
          },
          "minItems": 1
        }
      },
      "required": ["columns"]
    },
    "chart": {
      "type": "object",
      "properties": {
        "xAxis": {
          "type": "object",
          "properties": {
            "dataKey": { "$ref": "#/$defs/field" },
            "format": { "$ref": "#/$defs/formatter" },
            "reversed": { "type": "boolean" }
          },
          "required": ["dataKey"]
        },
        "yAxis": {
          "type": "object",
          "properties": { "format": { "$ref": "#/$defs/formatter" } }
        },
        "lines": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dataKey": { "$ref": "#/$defs/field" },
              "label": { "type": "string" }
            },
            "required": ["dataKey"]
          },
          "minItems": 1
        },
        "bars": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dataKey": { "$ref": "#/$defs/field" },
              "label": { "type": "string" }
            },
            "required": ["dataKey"]
          },
          "minItems": 1
        },
        "areas": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dataKey": { "$ref": "#/$defs/field" },
              "label": { "type": "string" }
            },
            "required": ["dataKey"]
          },
          "minItems": 1
        }
      },
      "required": ["xAxis"],
      "anyOf": [{ "required": ["areas"] }, { "required": ["bars"] }, { "required": ["lines"] }]
    },
    "pieChart": {
      "type": "object",
      "properties": {
        "dataKey": { "$ref": "#/$defs/field" },
        "nameKey": { "$ref": "#/$defs/field" },
        "format": { "$ref": "#/$defs/formatter" }
      },
      "required": ["dataKey", "nameKey"]
    },
    "metric": {
      "type": "object",
      "properties": {
        "dataKey": { "$ref": "#/$defs/field" },
        "format": { "$ref": "#/$defs/formatter" },
        "unit": { "type": "string" }
      },
      "required": ["dataKey"]
    },
    "text": {
      "type": "object",
      "properties": { "message": { "$ref": "#/$defs/field" } },
      "required": ["message"]
    },
    "field": {
      "type": "string"
    },
    "formatter": {
      "type": "string"
    },
    "transformer": {
      "type": "string"
    },
    "aggregation": {
      "type": "string"
    },
    "dynamicFieldOperation": { "type": "string" }
  }
}
